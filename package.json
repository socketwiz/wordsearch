{
  "name": "web-starter-kit",
  "version": "0.2.1",
  "main": "server/server.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "build": "cd frontend && npm run build",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:js": "npm run lint:eslint -- . ",
    "postinstall": "cd frontend && npm install",
    "posttest": "npm run lint && nsp check",
    "start": "cd frontend && npm start",
    "start:server": "pm2 start . --watch",
    "start:debug": "inspect .",
    "stop:server": "pm2 stop . --watch 0 && pm2 delete 0",
    "test": "npm run test:server:coverage && npm run test:frontend:coverage",
    "test:frontend": "cd frontend && npm test",
    "test:frontend:coverage": "cd frontend && npm run test:coverage",
    "test:frontend:debug": "cd frontend && npm run test:debug",
    "test:server": "mocha --watch server/test",
    "test:server:coverage": "nyc --reporter text --reporter html --report-dir coverage-server mocha server/test",
    "test:server:debug": "mocha --inspect-brk server/test"
  },
  "dependencies": {
    "compression": "1.7.2",
    "cors": "2.8.4",
    "helmet": "3.12.0",
    "loopback": "3.18.2",
    "loopback-boot": "2.27.1",
    "loopback-component-explorer": "5.3.0",
    "loopback-component-storage": "3.3.1",
    "ngrok": "2.3.0",
    "pm2": "2.10.1",
    "serve-favicon": "2.4.5",
    "strong-error-handler": "2.3.1"
  },
  "devDependencies": {
    "@types/prop-types": "15.5.2",
    "@types/react": "16.0.40",
    "@types/react-dom": "16.0.4",
    "@types/react-redux": "5.0.15",
    "chai": "4.1.2",
    "eslint": "4.18.2",
    "eslint-config-google": "0.9.1",
    "eslint-plugin-react": "7.7.0",
    "inspect-process": "0.5.0",
    "mocha": "5.0.1",
    "nsp": "3.2.1",
    "nyc": "11.4.1",
    "supertest": "3.0.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "UNLICENSED",
  "description": "Web Starter Kit"
}
