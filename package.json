{
  "name": "web-starter-kit",
  "version": "0.2.2",
  "main": "server/server.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "build": "cd frontend && npm run build",
    "lint": "npm run lint:frontend && npm run lint:server",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:server": "cd server && npm run lint",
    "postinstall": "cd frontend && npm install",
    "pretest": "npm run lint",
    "start": "cd frontend && npm start",
    "start:server": "pm2 start . --watch",
    "start:debug": "inspect .",
    "stop:server": "pm2 stop . --watch 0 && pm2 delete 0",
    "test": "npm run test:server && npm run test:frontend",
    "test:coverage": "npm run test:server:coverage && npm run test:frontend:coverage",
    "test:frontend": "cd frontend && npm run test:no-watch",
    "test:frontend:coverage": "cd frontend && npm run test:coverage",
    "test:frontend:debug": "cd frontend && npm run test:debug",
    "test:frontend:watch": "cd frontend && npm run test:watch",
    "test:server": "mocha server/test",
    "test:server:watch": "mocha --watch server/test",
    "test:server:coverage": "nyc --reporter text --reporter html --report-dir coverage --exclude server/test mocha server/test",
    "test:server:debug": "mocha --inspect-brk server/test"
  },
  "dependencies": {
    "compression": "1.7.3",
    "cors": "2.8.4",
    "cryptiles": "4.1.2",
    "helmet": "3.13.0",
    "loopback": "3.22.3",
    "loopback-boot": "2.27.1",
    "loopback-component-explorer": "6.3.0",
    "loopback-component-storage": "3.5.0",
    "ngrok": "3.1.0",
    "pm2": "3.2.1",
    "serve-favicon": "2.5.0",
    "strong-error-handler": "3.2.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "coveralls": "3.0.2",
    "inspect-process": "0.5.0",
    "mocha": "5.2.0",
    "npm-check-updates": "2.14.2",
    "nyc": "13.0.1",
    "supertest": "3.3.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "UNLICENSED",
  "description": "Web Starter Kit"
}
